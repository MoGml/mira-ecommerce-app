{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "apk": {
      "android": { "buildType": "apk" },
      "distribution": "internal"
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "resourceClass": "medium"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "resourceClass": "medium"
      }
    },
    "testflight": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "resourceClass": "medium",
        "autoIncrement": true
      }
    },
    "production": {
      "distribution": "store",
      "ios": {
        "resourceClass": "medium",
        "autoIncrement": true
      },
      "android": {
        "resourceClass": "medium",
        "autoIncrement": true
      }
    },
    "release": {
      "extends": "production",
      "android": {
        "buildType": "apk",
        "resourceClass": "medium"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
